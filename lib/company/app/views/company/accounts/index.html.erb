<h1>Listing Company Accounts</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<% @contacts.each do |contact| %>
  <tr>
    <td><%=contact.name%></td>
    <td><%=contact.website%></td>
    <td><%=contact.phone%></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_account_path(contact), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', contact, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Account', new_account_path, :class => 'btn btn-primary' %>
